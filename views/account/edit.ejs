    <hr />
    <section class="bg-white dark:bg-gray-900">
      <div class="max-w-2xl px-4 py-8 lg:py-16">
        <% if (locals.message) { %>
        <div
          class="p-2 mb-2 text-sm text-red-600 bg-red-100 border border-red-500 rounded-lg"
        >
          <%= message %>
        </div>
        <% } %> <% if (locals.success) { %>
        <div
          class="p-2 mb-2 text-sm text-green-600 bg-green-100 border border-green-500 rounded-lg"
        >
          <%= success %>
        </div>
        <% } %>

        <form action="/account/update" method="POST">
          <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
